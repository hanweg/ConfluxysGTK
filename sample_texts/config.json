{
  "application": {
    "name": "Confluxys",
    "version": "1.0.0",
    "description": "Document Management System"
  },
  "database": {
    "type": "SQLite",
    "path": "./data/confluxys.db",
    "options": {
      "wal_mode": true,
      "foreign_keys": true
    }
  },
  "features": {
    "text_extraction": {
      "enabled": true,
      "formats": ["pdf", "txt", "md", "csv", "json", "xml"]
    },
    "full_text_search": {
      "enabled": true,
      "engine": "FTS5"
    },
    "templates": {
      "enabled": true,
      "auto_reprocess": false
    }
  },
  "settings": {
    "max_file_size_mb": 100,
    "theme": "dark",
    "auto_save": true
  }
}